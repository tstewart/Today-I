<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.ListItemText" parent="Widget.AppCompat.ListView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TimeSelectionTitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TimeSelectionText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.OptionsEraseData">
        <item name="android:textColor">@color/colorWarning</item>
    </style>

    <!-- No background button theme -->
    <style name="AppTheme.ButtonNavigation" parent="Widget.AppCompat.ImageButton">
        <item name="android:drawable">@drawable/rounded_shape</item>
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:tint">@color/colorWhite</item>

    </style>

    <!-- Date label theme -->
    <style name="AppTheme.DateLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>