<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    tools:context=".ui.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayoutOptions">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textViewGeneralSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="@string/general_settings" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchEnableSwipeGesture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_gestures" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchClipAccomplishments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clip_accomplishments" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textViewNotificationSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="@string/notification_settings" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchEnableDailyNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_notifications" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:id="@+id/linearLayoutNotificationTimeSelect">

                <TextView
                    android:id="@+id/textViewSelectedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:theme="@style/AppTheme.TimeSelectionText" />

                <Button
                    android:id="@+id/buttonSetTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_set_custom_time" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDataManagementTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_management"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonRestoreBackup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_restore_backup" />

                <Button
                    android:id="@+id/buttonForceBackup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_force_backup" />

                <Button
                    android:id="@+id/buttonEraseAll"
                    style="@style/AppTheme.ButtonDeleteData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_erase_all_data" />

                <TextView
                    android:id="@+id/textViewLastBackedUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/last_backed_up"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingTop="64dp"
            android:paddingBottom="64dp">

            <TextView
                android:id="@+id/textViewAboutAppTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAboutCreatedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/about_created_by"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewAboutVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/about_version"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>