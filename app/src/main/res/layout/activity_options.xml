<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    tools:context=".ui.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewGoogleSignInTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/google_sign_in_title"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonGoogleSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/google_sign_in_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textViewGeneralSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/general_settings"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:text="@string/general_settings" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchEnableSwipeGesture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_gestures" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchClipAccomplishments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clip_accomplishments" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDataManagementTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_management"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:text="@string/data_management" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/buttonImportData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_import_data"
                    tools:text="@string/button_import_data" />

                <Button
                    android:id="@+id/buttonExportData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_export_data"
                    tools:text="@string/button_export_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonRestoreBackup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_restore_backup" />

                <Button
                    android:id="@+id/buttonForceBackup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_force_backup" />

                <Button
                    android:id="@+id/buttonEraseAll"
                    style="@style/AppTheme.ButtonDeleteData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#EB7777"
                    android:text="@string/button_erase_all_data" />

                <TextView
                    android:id="@+id/textViewLastBackedUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/last_backed_up"
                    android:textAlignment="center"
                    tools:text="@string/last_backed_up" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingTop="64dp"
            android:paddingBottom="64dp">

            <TextView
                android:id="@+id/textViewAboutAppTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAboutCreatedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/about_created_by"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewAboutVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/about_version"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>