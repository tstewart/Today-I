<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:buttonStyle">@style/AppTheme.ButtonTheme</item>
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorOnSurfaceInverse</item>
        <item name="colorError">?attr/colorOnError</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item>
        <item name="colorSecondary">?attr/colorSecondary</item>
        <item name="colorOnSecondary">?attr/colorOnSecondary</item>
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="android:navigationBarColor">?attr/colorOnSurfaceInverse</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="ThemeOverlay.Material3.MaterialCalendar.Fullscreen">
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowBackground">?attr/colorOnSurfaceInverse</item>

        <item name="android:windowEnterAnimation">@anim/enter_from_bottom</item>
    </style>

    <style name="AppTheme.TimeSelectionTitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TimeSelectionText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.ListItemTitle" parent="Widget.AppCompat.ListView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NewAccomplishmentButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:backgroundTint">@color/colorTransparent</item>
    </style>

    <!-- Button primary theme -->
    <style name="AppTheme.ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorButtonBg</item>
    </style>

    <!-- No background button theme -->
    <style name="AppTheme.ButtonNavigation" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:foreground">@drawable/ripple</item>
    </style>

    <!-- Button delete data theme -->
    <style name="AppTheme.ButtonDeleteData" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorWarning</item>
    </style>

    <!-- Day rating fragment -->
    <style name="AppTheme.DayRatingButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <!-- Settings activity -->
    <style name="AppTheme.OptionsEraseData">
        <item name="android:textColor">?attr/colorOnError</item>
    </style>

    <!-- Calendar activity -->
    <style name="AppTheme.CalendarTheme">
        <item name="mcv_selectionColor">@color/colorCalendarSelection</item>
        <item name="mcv_dateTextAppearance">?textAppearanceLabelSmall</item>
        <item name="mcv_headerTextAppearance">@style/AppTheme.CalendarHeaderText</item>
        <item name="mcv_weekDayTextAppearance">@style/AppTheme.CalendarMonthLabelText</item>
        <item name="mcv_leftArrow">@drawable/navigation_previous</item>
        <item name="mcv_rightArrow">@drawable/navigation_next</item>
    </style>

    <style name="AppTheme.CalendarDateText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.CalendarHeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.CalendarMonthLabelText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">20dp</item>
    </style>
</resources>
