<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonTheme</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:titleTextColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TimeSelectionText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.ListItemText" parent="Widget.AppCompat.ListView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="AppTheme.NoActionBar">
        <item name="android:background">@color/colorSplashBackground</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- Button primary theme -->
    <style name="AppTheme.ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorButtonBg</item>
    </style>

    <!-- No background button theme -->
    <style name="AppTheme.ButtonNavigation" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:foreground">@drawable/ripple</item>
    </style>

    <!-- Button delete data theme -->
    <style name="AppTheme.ButtonDeleteData" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorWarning</item>
    </style>

    <!-- Day rating fragment -->
    <style name="AppTheme.DayRatingButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <!-- Options activity -->

    <style name="AppTheme.OptionsGroup">
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="AppTheme.OptionsGroupTitle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.OptionsItem">
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTheme.OptionsItemNoIcon" parent="AppTheme.OptionsItem">
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="AppTheme.OptionsItemTitleText" parent="android:TextAppearance.Holo">
        <item name="android:textColorHighlight">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColorLink">@color/colorWhite</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.OptionsItemSubtitleText">
        <item name="android:padding">0dp</item>
        <item name="android:paddingEnd">50dp</item>
    </style>

    <style name="AppTheme.OptionsItemIcon">
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="AppTheme.OptionsEraseData">
        <item name="android:textColor">@color/colorWarning</item>
    </style>

    <!-- Calendar activity -->
    <style name="AppTheme.CalendarTheme">
        <item name="mcv_selectionColor">@color/colorCalendarSelection</item>
        <item name="mcv_dateTextAppearance">@style/AppTheme.CalendarDateText</item>
        <item name="mcv_headerTextAppearance">@style/AppTheme.CalendarHeaderText</item>
        <item name="mcv_weekDayTextAppearance">@style/AppTheme.CalendarMonthLabelText</item>
        <item name="mcv_leftArrow">@drawable/navigation_previous</item>
        <item name="mcv_rightArrow">@drawable/navigation_next</item>
    </style>

    <style name="AppTheme.CalendarDateText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.CalendarHeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.CalendarMonthLabelText">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
